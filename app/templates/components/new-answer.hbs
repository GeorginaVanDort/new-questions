{{#if newAnswer}}
  <div class="container">
    <h1>Add a Reply</h1>
    <hr>

      <form>
        <div class="form-group">
          <label for="text">Put Your Thoughts Down Here</label><br>
          {{textarea rows="6" cols="40" value=text id="text"}}
        </div>

        <div class="form-group">
          <label for="date">Your Name</label>
          {{input value=name id="name"}}
        </div>

        <button class="btn"{{action 'saveAnswer'}}>Save</button>
      </form>

  </div>
{{else}}
    <button class="btn" {{action 'answerFormShow'}}>Add a Reply</button>
    <br>
    <br>
{{/if}}
